---
import { Header } from '../components/layout/Header';
import { Footer } from '../components/layout/Footer';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = "Mr.Clean Services", description = "Facility Management, Handwerk & Reinigung" } = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="canonical" href={`https://mrclean-services.de${Astro.url.pathname}`} />
  </head>
  <body>
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>
